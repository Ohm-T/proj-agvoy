{% extends 'base.html.twig' %}

{% block title %}Hello MesReservationsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mes réservations : ✅</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Client Id</th>
            <th>Room Id</th>
            <th>Paid ?</th>
            <th>Début</th>
            <th>Fin</th>
        </tr>
    </thead>
    <tbody>
  	{% for reservation in reservations %}
  	<tr>
  	<td>{{ reservation.client.id }}</td>
  	<td>{{ reservation.room.id }}</td>
        <td>{{ reservation.paid }}</td>
  	<td>{{ reservation.datedeb ? reservation.datedeb|date('Y-m-d') : '' }}</td>
  	<td>{{ reservation.datefin ? reservation.datefin|date('Y-m-d') : '' }}</td>
  	</tr>
  	{% endfor %} {# reservations #}
    </tbody>
</table>

{% endblock %} {# body #}
